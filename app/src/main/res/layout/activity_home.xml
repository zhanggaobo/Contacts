<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">

    <FrameLayout
            android:id="@+id/home_content_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
    </FrameLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/home_btm_bg"
            android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_bg"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="1dp"
                android:orientation="horizontal">

            <RelativeLayout
                    android:id="@+id/home_tab_rel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >

                <FrameLayout
                        android:id="@+id/home_tab_frame1"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        >

                    <ImageView
                            android:id="@+id/home_tab_image1"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/ic_launcher"
                            android:visibility="gone"
                            />

                    <TextView
                            android:id="@+id/home_tab_count1"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/shape_count_read"
                            android:layout_gravity="top|right"
                            android:gravity="center"
                            android:textSize="10dp"
                            android:textColor="@color/white"
                            android:text="3"
                            android:visibility="gone"
                            />
                </FrameLayout>

                <TextView
                        android:id="@+id/home_tab_text1"
                        android:layout_below="@+id/home_tab_frame1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp"
                        android:textColor="@color/theme"
                        android:text="电话"
                        />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/home_tab_rel2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >

                <FrameLayout
                        android:id="@+id/home_tab_frame2"
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        >

                    <ImageView
                            android:id="@+id/home_tab_image2"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/ic_launcher"
                            />

                    <TextView
                            android:id="@+id/home_tab_count2"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/shape_count_read"
                            android:layout_gravity="top|right"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:text="3"
                            android:visibility="gone"
                            />
                </FrameLayout>

                <TextView
                        android:id="@+id/home_tab_text2"
                        android:layout_below="@+id/home_tab_frame2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp"
                        android:textColor="@color/text_bg"
                        android:text="联系人"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/home_tab_rel3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    >

                <FrameLayout
                        android:id="@+id/home_tab_frame3"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        >

                    <ImageView
                            android:id="@+id/home_tab_image3"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@mipmap/ic_launcher"
                            android:visibility="gone"
                            />

                    <TextView
                            android:id="@+id/home_tab_count3"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/shape_count_read"
                            android:layout_gravity="top|right"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:visibility="gone"
                            />
                </FrameLayout>

                <TextView
                        android:id="@+id/home_tab_text3"
                        android:layout_below="@+id/home_tab_frame3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="14dp"
                        android:textColor="@color/text_bg"
                        android:text="记事本"
                        />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>