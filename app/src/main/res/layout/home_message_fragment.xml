<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
    <com.zhanggb.contacts.app.view.HeaderView
            android:id="@+id/header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    <FrameLayout
            android:id="@+id/banner_frame"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
        <LinearLayout
                android:id="@+id/feiwo_banner_ll"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:orientation="horizontal"
                >
        </LinearLayout>
        <ImageView
                android:id="@+id/banner_close_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_edit_close"
                android:layout_centerVertical="true"
                android:layout_gravity="top|right"
                android:padding="5dp"
                />
    </FrameLayout>
    <com.zhanggb.contacts.app.view.pullableview.PullToRefreshLayout
            android:id="@+id/refresh_view"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/header_view"
            android:layout_above="@+id/banner_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

        <include layout="@layout/refresh_head"/>
        <com.zhanggb.contacts.app.view.pullableview.PullableListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:groupIndicator="@null"
                android:divider="@color/divider_color"
                android:dividerHeight="1px"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
                >
        </com.zhanggb.contacts.app.view.pullableview.PullableListView>
        <!--<com.zhanggb.contacts.app.view.pullableview.PullableSwipeListView-->
